@model IEnumerable<AssetManagement.Models.AssetManagement.ResourceDetailReportViewModel>

@{
    ViewBag.Title = "ResourceDetailReport";
}

<h2>Resource Detail Report</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ResourceName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OriginalQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    string style = (item.OriginalQuantity > item.CurrentQuantity) ? "background-color:#ff9999" : (item.CurrentQuantity > item.OriginalQuantity) ? "background-color:#b3ffb3" : null;
    <tr style="@style">
        <td>
            @Html.DisplayFor(modelItem => item.ResourceName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Size)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OriginalQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CurrentQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
        <td>
            @Html.ActionLink("Update Database", "UpdateDatabase", new { id = item.ResourceId, currentQuantity = item.CurrentQuantity, originalQuantity = item.OriginalQuantity })
        </td>
    </tr>
}

</table>
